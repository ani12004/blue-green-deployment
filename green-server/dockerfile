# Use a lightweight official NGINX image as the base
FROM nginx:alpine

# Copy the custom index.html from the green-server directory
COPY index.html /usr/share/nginx/html/index.html

# Expose port 3002 - The port the Green container is listening on internally
EXPOSE 3002

# Reconfigure NGINX to listen on 3002 instead of the default 80
RUN echo "daemon off;" > /etc/nginx/nginx.conf \
    && echo "events {}" >> /etc/nginx/nginx.conf \
    && echo "http { include /etc/nginx/mime.types; server { listen 3002; root /usr/share/nginx/html; } }" >> /etc/nginx/nginx.conf

# Start NGINX
CMD ["nginx"]
