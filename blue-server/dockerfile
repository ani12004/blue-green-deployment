# Use a lightweight official NGINX image as the base
FROM nginx:alpine

# Copy the custom index.html from the blue-server directory
COPY index.html /usr/share/nginx/html/index.html

# Expose port 3001 - The port the Blue container is listening on internally
EXPOSE 3001 

# Reconfigure NGINX to listen on 3001 instead of the default 80
# This is a common requirement when changing the default port
RUN echo "daemon off;" > /etc/nginx/nginx.conf \
    && echo "events {}" >> /etc/nginx/nginx.conf \
    && echo "http { include /etc/nginx/mime.types; server { listen 3001; root /usr/share/nginx/html; } }" >> /etc/nginx/nginx.conf
    
# Start NGINX
CMD ["nginx"]
